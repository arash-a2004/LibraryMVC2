@model LibrarySystem.Web.Models.UsersViewModel

<!-- Filter Form -->
<form id="filterForm" style="margin-bottom: 20px;">

    <input type="text" name="Username" placeholder="Username" value="@Model.Username" />

    <label>
        Active:
        <input type="checkbox" name="IsActive" value="true" @(Model.IsActive == true ? "checked" : "") />
    </label>

    <input type="submit" value="Filter" />
</form>

<!-- Users Table -->
@if (Model != null && Model.Users != null && Model.Users.Any())
{
    <table border="1" cellpadding="5" style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr style="background-color: #f0f0f0;">
                <th style="padding: 8px;">Username</th>
                <th style="padding: 8px;">Subscription Time</th>
                <th style="padding: 8px;">Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {

                <tr style="cursor: pointer;"
                    onclick="showUserDetails(@user.Id)"
                    onmouseover="this.style.backgroundColor='#f5f5f5'"
                    onmouseout="this.style.backgroundColor=''">
                    <td style="padding: 8px;">@user.Username</td>
                    <td style="padding: 8px;">@user.SubscriptionTime.ToString("yyyy-MM-dd")</td>
                    <td style="padding: 8px;">@user.IsActive</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found.</p>
}
